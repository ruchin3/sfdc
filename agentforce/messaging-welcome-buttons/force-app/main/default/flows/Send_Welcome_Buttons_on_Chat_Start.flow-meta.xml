<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <actionCalls>
        <name>Send_Welcome_Buttons</name>
        <label>Send Welcome Buttons</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <actionName>embeddedService:sendRichMessage</actionName>
        <actionType>sendRichMessage</actionType>
        <flowTransactionModel>CurrentTransaction</flowTransactionModel>
        <inputParameters>
            <name>recordId</name>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </inputParameters>
        <inputParameters>
            <name>messageContent</name>
            <value>
                <stringValue>Welcome! How can I help you today?</stringValue>
            </value>
        </inputParameters>
        <inputParameters>
            <name>componentName</name>
            <value>
                <stringValue>c:buttonComponent</stringValue>
            </value>
        </inputParameters>
        <inputParameters>
            <name>componentAttributes</name>
            <value>
                <elementReference>jsonButtonAttributes</elementReference>
            </value>
        </inputParameters>
    </actionCalls>
    <apiVersion>59.0</apiVersion>
    <description>When a new messaging session is created, this flow automatically sends a custom LWC with buttons to the user.</description>
    <environments>Default</environments>
    <interviewLabel>Send Welcome Buttons on Chat Start {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Send Welcome Buttons on Chat Start</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Send_Welcome_Buttons</targetReference>
        </connector>
        <object>MessagingSession</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Draft</status>
    <variables>
        <name>jsonButtonAttributes</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <value>
            <stringValue>{"buttons":[{"label":"Check Order Status","value":"OrderStatus"},{"label":"Get Product Help","value":"ProductHelp"},{"label":"Speak to an Agent","value":"TransferToAgent"}]}</stringValue>
        </value>
    </variables>
</Flow>